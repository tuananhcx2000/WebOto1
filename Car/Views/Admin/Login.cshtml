
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/Logincss/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Logincss/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Logincss/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Logincss/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Logincss/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Logincss/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Logincss/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Logincss/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="limiter">
            <div class="container-login100" >
                <div class="wrap-login100" style="padding: 55px 130px 33px 95px;">
                    
                    <form class="login100-form validate-form">
                        <span class="login100-form-title">
                            Admin Login
                        </span>

                        <div class="wrap-input100 validate-input" data-validate="User is required" style="position:relative;left:180px">
                            <input class="input100" type="text" name="txtTaiKhoan" placeholder="User" style="width:50%">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Password is required"  style="position:relative;left:180px">
                            <input class="input100" type="password" name="txtMatKhau" placeholder="Password" style="width:50%">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="container-login100-form-btn"  style="width: 50%;position: relative; left: 180px">
                            <button class="login100-form-btn">
                                Login
                            </button>
                        </div>
                       
                        
                    </form>
                </div>
            </div>
        </div>
    }




    <!--===============================================================================================-->
    <script src="~/Content/Logincss/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Logincss/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Logincss/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Logincss/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Logincss/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="js/main.js"></script>

</body>
</html>
