@model Car.Models.SanPham
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<div class="page-heading about-heading header-text" style="background-image: url(/Content/assets/images/heading-6-1920x500.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-content">
                    <h4><del></del> <strong class="text-primary"></strong></h4>
                    <h2></h2>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="products">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active ">
                            <img class="d-block w-100" src="~/Content/assets/images/@Model.HinhAnh" alt="First slide">
                        </div>
                        <div class="carousel-item ">
                            <img class="d-block w-100" src="~/Content/assets/images/@Model.HinhAnh1" alt="Second slide">
                        </div>
                        <div class="carousel-item ">
                            <img class="d-block w-100" src="~/Content/assets/images/@Model.HinhAnh2" alt="Three slide">
                        </div>
                        <div class="carousel-item ">
                            <img class="d-block w-100" src="~/Content/assets/images/@Model.HinhAnh3" alt="Four slide">
                        </div>
                        <div class="carousel-item ">
                            <img class="d-block w-100" src="~/Content/assets/images/@Model.HinhAnh4" alt="Five slide">
                        </div>

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>







            <div class="col-md-6">
                <span style="font-size:30px">Thông Số Kĩ Thuật</span>
                <form action="#" method="post" class="form">

                    <ul class="list-group list-group-flush">

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Xuất Xứ</span>

                                <strong class="pull-right">@Model.ChiTietSP.XuatXu</strong>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Nămsx/model</span>

                                <strong class="pull-right">@Model.ChiTietSP.NamSanXuat</strong>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left"> Kích thước ( D x R x C ) ( mm )</span>

                                <strong class="pull-right">@Model.ChiTietSP.KichThuoc</strong>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Chiều dài cơ sở ( mm )</span>

                                <strong class="pull-right">@Model.ChiTietSP.ChieuDaiCoSo</strong>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Tự trọng(Kg )</span>

                                <strong class="pull-right">@Model.ChiTietSP.TuTrong</strong>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Dung tích xi lanh ( cc )</span>

                                <strong class="pull-right">@Model.ChiTietSP.DungTichXiLanh</strong>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Kiểu động cơ</span>

                                <strong class="pull-right">@Model.ChiTietSP.KieuDongCo </strong>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Hộp số</span>

                                <strong class="pull-right">@Model.ChiTietSP.HopSo</strong>
                            </div>
                        </li>


                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Mã lực (hp - vòng / phút)</span>

                                <strong class="pull-right">@Model.ChiTietSP.CongSuatLonNhat</strong>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Loại nhiên liệu</span>

                                <strong class="pull-right">@Model.ChiTietSP.NhienLieu</strong>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Kiểu dẫn động</span>

                                <strong class="pull-right">@Model.ChiTietSP.KieuDanDong</strong>
                            </div>
                        </li>

                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Số chỗ ngồi</span>

                                <strong class="pull-right">@Model.ChiTietSP.SoChoNgoi</strong>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="clearfix">
                                <span class="pull-left">Cỡ lốp</span>

                                <strong class="pull-right">@Model.ChiTietSP.CoLop</strong>
                            </div>
                        </li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
</div>
@{
